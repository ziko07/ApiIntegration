<%= form_tag("/payment_stripe", method: "get") do %>
    <div class=" clearfix">
      <%= hidden_field_tag('token', :id => 'cotoken') %>
      <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12 form">
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.text_field :card_no, class: 'form-control', placeholder: 'Card Number'%>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.text_field :address, class: 'form-control', placeholder: 'Address'%>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.text_field :zip, class: 'form-control', placeholder: 'Zip'%>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.text_field :cvc, class: 'form-control', placeholder: 'CVC Number'%>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.text_field :state, class: 'form-control', placeholder: 'State'%>
          </div>
        </div>
      </div>

      <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12 form">
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.select :exp_month, options_for_select(months), {}, class: "form-control ", placeholder: 'Expire Month' %>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.select :exp_year, (Time.zone.now.year)..(Time.zone.now.year + 15), {}, :class => 'form-control ', placeholder: 'Expire Year' %>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.country_select(:country, {}, :class => 'form-control ', placeholder: 'Country') %>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.text_field :city, class: 'form-control', placeholder: 'City'%>
          </div>
        </div>

      </div>
      <div class="col-lg-12"></br></br>
        <div class="form-group">
          <%= link_to('Back To Cart', :back, :class => 'btn btn-sm  btn-warning ') %>
          <%= f.submit 'Continue Payment', class: "btn btn-sm  btn-success" %>
        </div>
      </div>
    </div>
<% end %>