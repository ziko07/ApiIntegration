
<h1 class="page-top-title">Welcome to Twitter authentication</h1>
<div class="fb_login panel-default centralized">
  <div class="panel-heading">Share With Twitter
  </div>
  <div class="panel-body">

  <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Share With Twitter</h4>
        </div>
        <div class="modal-body">
          <textarea id="twitter_share_message" class="form-control" rows="3"></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" onclick="twitter_share()">Share</button>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <a href="#" class="btn btn-lg btn-social btn btn-lg btn-social btn-twitter"
       data-toggle="modal"
       data-target="#basicModal"><i class="fa fa-twitter"></i> Twitter</a>
  </div>
</div>
</div>

<script type="text/javascript">

    var html_value = "";

    function twitter_share()
    {
        var value = $('#twitter_share_message').val();
        var url = "http://twitter.com/share?url=http://www.facebook.com&text=I just DID it! "+ value +" ";
        window.open(url, 'newWindow', 'width=626, height=436');
    }


</script>