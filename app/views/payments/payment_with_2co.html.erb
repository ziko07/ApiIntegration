<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h1>New Payment</h1>
    <div class="well">
      <%= form_tag("/payment_2co", method: "get") do %>
          <div class="form-group">
            <%= label_tag(:first_name, "First Name",class: "control-label" ) %>
            <%= text_field_tag :first_name , nil, class: 'form-control'%>
          </div>

          <div class="form-group">
            <%= label_tag(:last_name, "Last Name",class: "control-label" ) %>
            <%= text_field_tag :last_name, nil, class: 'form-control'%>
          </div>

          <div class="form-group">
            <%= label_tag(:amount, "Amount",class: "control-label" ) %>
            <%= text_field_tag :amount, nil, class: 'form-control'%>
          </div>

          <div class="form-group">
            <%= label_tag(:quantity, "Quantity",class: "control-label" ) %>
            <%= text_field_tag :quantity, nil, class: 'form-control'%>
          </div>
          <div class="form-group">
            <%= image_submit_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif") %>
          </div>

      <% end %>

    </div>
  </div>
</div>