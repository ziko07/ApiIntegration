<h1 class="page-top-title">Welcome to Gmail authentication</h1>
<div class="fb_login panel-default centralized">
  <div class="panel-heading">Login With Google+
  </div>

  <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&amp;times;</button>
          <h4 class="modal-title" id="myModalLabel">Share With Google+</h4>
        </div>
        <div class="modal-body">
          <textarea id="google_share_message" class="form-control" rows="3"></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" onclick="share()">Share</button>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <a href="#" class="btn btn-lg btn-social btn btn-lg btn-social btn-google"
       data-toggle="modal"
       data-target="#basicModal"><i class="fa fa-google-plus"></i> Google+</a>
  </div>

</div>

<script type="text/javascript">

    var html_value = "";

    function share()
    {
        var value = $('#google_share_message').val();
        var url = "http://m.google.com/app/plus/x/?v=www.facebook.com&content=I just DID it"+ value +"";
        window.open(url,'gplusshare','width=450,height=300,left='+(screen.availWidth/2-225)+',top='+(screen.availHeight/2-150)+'');
    }


</script>


